{
  "name": "portal-api",
  "version": "1.0.0",
  "description": "BioDAO CoreAgent API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:legacy": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test:email": "ts-node src/test-email.ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles"
  },
  "keywords": [
    "biodao",
    "coreagent",
    "websocket",
    "api"
  ],
  "author": "BioDAO",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.1.11",
    "@langchain/openai": "^0.0.11",
    "@prisma/client": "5.4.2",
    "@zoralabs/protocol-sdk": "^0.13.5",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "discord.js": "^14.18.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.1",
    "langchain": "^0.0.203",
    "mailgun.js": "^11.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.95.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.15.6",
    "viem": "^2.27.2",
    "ws": "^8.14.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.4",
    "@types/pg": "^8.15.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.6",
    "jest": "^29.7.0",
    "prisma": "^5.4.2",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
